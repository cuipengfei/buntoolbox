{
  "name": "Buntoolbox Development Environment",
  "image": "cuipengfei/buntoolbox:latest",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "git.autofetch": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "redhat.java",
        "vscjava.vscode-java-pack",
        "oven.bun-vscode",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,type=bind,readonly",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/root/.gitconfig,type=bind,readonly"
  ],
  "containerEnv": {
    "SHELL": "/bin/bash"
  },
  "postCreateCommand": "echo 'Buntoolbox dev environment ready!'",
  "remoteUser": "root",
  "features": {}
}
